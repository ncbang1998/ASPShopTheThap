@model ShopTheThao.Areas.Admin.Models.TheLoaiModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo danh mục mới</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "TheLoaiSP")
</div>
@using (Html.BeginForm("Create", "TheLoaiSP", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.message
        </div>
        <div class="form-group col-lg-5">

            <label>Tên sản phẩm</label>
            @Html.EditorFor(model => model.TLTen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TLTen)</div> 

            <label>Hình ảnh</label>
            <input type="file" id="Image" name="Image" />
            <div class="text-danger">@ViewBag.HinhAnh</div>
          
            <br />
            <input type="submit" value="Tạo mới" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

