@model IEnumerable<ShopTheThao.Areas.Admin.Models.DetielOrderModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết Đơn Hàng</h2>
<div class="text-warning">
    @ViewBag.message
</div>
<hr />
<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="form-group input-group navbar-right">
                @using (Ajax.BeginForm("Index", "Orders", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
                {
                    <input type="search" name="name" class="form-control" style="width:300px" placeholder="Nhập tên sản phẩm..." />
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                }
            </div>
        </div>
        <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Mã SP</th>
                            <th>Tên SP</th>
                            <th>Giá bán</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>                
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DHMa)</td>
                                <td>@Html.DisplayFor(modelItem => item.SPMa)</td>
                                <td>@Html.DisplayFor(modelItem => item.SPTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.SPGiaBan)</td>
                                <td>@Html.DisplayFor(modelItem => item.CTDHSoLuong)</td>
                                <td>@Html.DisplayFor(modelItem => item.CTDHThanhTien)</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
