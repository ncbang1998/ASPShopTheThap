@model IEnumerable<ShopTheThao.Areas.Admin.Models.OrdersModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Đơn Hàng</h2>
<div class="text-warning">
    @ViewBag.message
</div>
<hr />
<div>
    <div class="panel panel-default">
        <div class="panel-heading">         
            <div class="form-group input-group navbar-right">
                @using (Ajax.BeginForm("Index", "Orders", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
                {
                    <input type="search" name="name" class="form-control" style="width:300px" placeholder="Nhập tên sản phẩm..." />
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                }
            </div>
        </div>
        <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên khách hàng</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>                          
                            <th>Nội dung</th>
                            <th>Ngày đặt hàng</th>                     
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DHMa)</td>
                                <td>@Html.DisplayFor(modelItem => item.KHHoTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.KHSdt)</td>
                                <td>@Html.DisplayFor(modelItem => item.KHDiaChi)</td>       
                                <td>@Html.DisplayFor(modelItem => item.KHTinNhan)</td>
                                <td>@Html.DisplayFor(modelItem => item.DHTGDatHang)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Products", new { id = item.DHMa})"><i class="fa fa-pencil fa-fw"></i></a>|
                                    @*<a href="@Url.Action("Details", "Products", new { id = item.SPMa })"><i class="fa fa-list-alt fa-fw"></i></a>|*@
                                    @*<a onclick="return confirm('Bạn có chắc chắn muốn xoá sản phẩm này?')" href="@Url.Action("Delete", "Products", new { id = item.SPMa })"><i class="fa fa-times fa-fw"></i></a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
